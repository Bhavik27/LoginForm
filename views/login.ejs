<div class="row mt-5 h-100">
    <div class="col-md-6 m-auto shadow-sm">
        <h1 class="text-center text-success mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>

        <%- include('messages') %>

        
        <form action="/user/login" method="POST">
          <div class="form-group my-2">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group my-2">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
            <div class="d-grid mt-5">
                <button type="submit" class="btn btn-success ">Login</button>
            </div>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/user/register" class="text-success">Register</a>
        </p>
    </div>
  </div>